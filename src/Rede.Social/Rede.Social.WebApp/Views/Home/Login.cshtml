@using Rede.Social.Domain.Models;
@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutSimples";
}
<div class="login-page col-12">
    <div class="d-flex">
        <div class="col-8 description-home">
            <img src="~/assets/imgs/flier.png" />
            <p> Conecte-se com seus amigos, siga celebridades e compartilhe seus momentos!</p>
        </div>
        <div class="col-4 form-home">

            <form asp-asp-controller="Home" asp-action="Logar" method="post">

                @if (!string.IsNullOrEmpty(Model?.Message))
                {
                    <div class="center-text container ">
                        <div class="message-warning">
                            <p class="text-semi-bold-orange">@Model.Message</p>
                        </div>
                    </div>
                }

                <div class="mt-1">
                    <h3>Entrar</h3>
                </div>

                <div class="form-outline mb-5 ag-field-content ">
                    <input asp-for="Email" type="text" id="email-form" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
                    <label class="form-label ag-field-label" for="email-form">Email</label>
                </div>

                <div class="form-outline ag-field-content">
                    <input asp-for="Senha" type="password" class="form-control ag-field-input" id="password" required>
                    <label for="password" class="form-label ag-field-label">Password</label>

                </div>

                <div class="col d-flex text-white">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <label class="form-check-label" for="chkLembrarMe"> Lembrar-me </label>
                        <input asp-for="LembrarMe" class="form-check-input form-checkbox-input" type="checkbox" value="" checked="">

                    </div>
                </div>

                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-outline-highlight">Entrar</button>
                </div>
                <div class="text-center">
                    <small class="text-white"> Não possuí cadastro? <a href="#" class="links">cadastre-se</a></small>
                </div>
            </form>
        </div>
    </div>

</div>
