@using Rede.Social.Domain.Authorization;
<div class="container-fluid mt-5 text-center ">


    <div class="mt-5 mb-5 col-lg-12 d-inline-flex" style="align-items: center;">
        <div class="col-lg-2">
            <img src="~/assets/imgs/warning_img.png" style="height: 80px;    width: 80px;" />
        </div>

        <div class="col-9 col-lg-9 col-md-9 col-sm-9 ">
            <h1 class="mt-5 text-regular-orange ">Acesso não autorizado</h1>

            @if (!User.IsAuthenticated())
            {
                <p class="text-regular-orange mt-3">Para prosseguir, efetue <a href="../Home/Login" class="link-redirect-orange text-bold-orange">login</a>.</p>
            }
            else
            {
                <p class="text-regular-orange mt-3">Você não possui permissão de administrador para prosseguir.</p>
            }         
        </div>
    </div>
</div>